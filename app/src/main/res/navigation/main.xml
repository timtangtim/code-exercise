    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.projectx.codeexercise.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_recentSearchFragment"
            app:destination="@id/recentSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/recentSearchFragment"
        android:name="com.projectx.codeexercise.RecentSearchFragment"
        android:label="recent_search_fragment"
        tools:layout="@layout/recent_search_fragment" />
</navigation>